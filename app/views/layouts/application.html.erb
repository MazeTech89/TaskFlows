<!DOCTYPE html>
<html>
  <head>
    <title>TaskFlows</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application.bootstrap", "data-turbo-track": "reload" %>

    <%= javascript_importmap_tags %>
    <!-- Bootstrap & Popper.js via CDN as ES modules -->
    <script type="module" src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/esm/index.js"></script>
    <script type="module" src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.esm.js"></script>

    </head>

  <body>
    <%= render "shared/navbar" %>
    <div class="container mt-4">
      <% if notice %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= notice %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>
      <% if alert %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= alert %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>