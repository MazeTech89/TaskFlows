<%= form_with(model: @project, local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control", placeholder: "Enter project name" %>
  </div>

  <div class="mb-3">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control", placeholder: "Enter project description" %>
  </div>

  <%= form.hidden_field :user_id %>

  <div class="mt-3">
    <%= form.submit "Save Project", class: "btn btn-primary" %>
  </div>
<% end %>
